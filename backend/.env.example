# SnackScan Backend Environment Configuration
# Copy this to .env and fill in your API keys

# Flask Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=True
FLASK_ENV=development

# Google Vision API (for advanced image recognition)
# Get from: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# USDA FoodData Central API (FREE - RECOMMENDED)
# Get from: https://fdc.nal.usda.gov/api-guide.html
USDA_API_KEY=your-usda-api-key

# Edamam Nutrition API (FREE tier available)
# Get from: https://developer.edamam.com/edamam-nutrition-api
EDAMAM_APP_ID=your-edamam-app-id
EDAMAM_APP_KEY=your-edamam-app-key

# Spoonacular API (PAID - but very reliable)
# Get from: https://spoonacular.com/food-api/console#Dashboard
SPOONACULAR_API_KEY=your-spoonacular-api-key

# Application Settings
MAX_FILE_SIZE=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
LOG_LEVEL=INFO